.search_contain{
  height: 88rpx;
  background: #42bd56;
  width: 100%;
  display: flex;
  justify-content: center;
  align-items: center;
}
.search_contain .search {
  display: flex;
  align-items: center;
  width: 90%;
  background: #fff;
  height: 58rpx;
  border-radius: 15rpx;
  padding-left: 10rpx;
  padding-right: 10rpx;
}
.search_contain .search input {
  padding-left: 10rpx;
  font-size: 24rpx;
}

.card{
  padding-top: 20rpx;
}
.card_contain .card_header{
  padding: 0 36rpx;
  display: flex;
  justify-content: space-between;
  font-size: 34rpx;
  color: #111111
} 
.card_contain .card_header text:nth-child(2){
  font-size: 28rpx;
  color: #42bd56;
}
.card_contain .card_content {
  padding-top: 30rpx;
  padding-bottom: 50px;
}
.card_contain .card_content .card_items{
  display: flex;
}
.card_contain .card_content .card_item {
  padding-left: 15rpx;
  width: 200rpx;
}
.card_contain .card_content .card_item:first-child {
  padding-left: 36rpx;
}
.card_item cover-image {
  width: 100%;
  height: 284rpx;
}
.card_item .item_title {
  width: 200rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  text-align: center;
  display: inline-block
}
.card_item .item_rating{
  display: flex;
  justify-content: center;
  font-size: 24rpx;
}
.card_item .item_stars{
  padding-right: 10rpx;
}
.scoreActive{
  color:orange
}