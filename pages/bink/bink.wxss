.banner,.slide-image{
  width: 100%;
  height: 286rpx;
}

.goodsList{
  width: 100%;
  display: flex;
  flex-wrap: wrap;
  justify-content: space-between;
}
.goodsList>.goodsItem{
  margin-top: 22rpx;
  width: 48%;
}
.goodsPic,.goodsPic>image{
  width: 100%;
  height: 372rpx;
}
.goodsInfo{
margin: 10rpx 15rpx 0;
    text-align: center;
}

.title{
  font-size: 26rpx;
  width: 100%;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  color: #333333;
  line-height: 50rpx;
  display: inline-block
}
.goodsPrice{
  color: #E60044;
  font-weight: 800;
  line-height: 50rpx;
}